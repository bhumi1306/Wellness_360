<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Plan">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="#EEE7FF"
        tools:context=".Plans">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="-5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/planshort" />

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_marginTop="150dp"
            android:background="#959494"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="143dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="143dp"
            android:text=" Find a Plan "
            android:textAlignment="center"
            android:textColor="#906BEB"
            android:textSize="22sp"
            android:textStyle="bold"
            app:flow_horizontalAlign="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView12" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="138dp"
            android:layout_marginEnd="138dp"
            android:text="Elevate your Fitness!"
            android:textColor="#906BEB"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="153dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:id="@+id/sview1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@color/white"
                android:contentDescription="scroll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="16dp"
                        android:text="Available Plans"
                        android:textAlignment="center"
                        android:textColor="#906BEB"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/plan1"
                        android:layout_width="250dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/white"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/whatsapp_image_2023_07_06_at_13_32_58" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="119dp"
                            android:layout_height="54dp"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="10dp"
                            android:text="Meditation with calm music"
                            android:textColor="#8158EA"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="60dp"
                            android:text="2 week-s Daily"
                            android:textColor="#615F5F"
                            android:textSize="13sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/plan2"
                        android:layout_width="250dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/white"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:background="#FFFFFF"
                            app:srcCompat="@drawable/jog" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="119dp"
                            android:layout_height="54dp"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="10dp"
                            android:text="7000 Steps a day"
                            android:textColor="#8158EA"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="60dp"
                            android:text="28 days- Daily"
                            android:textColor="#615F5F"
                            android:textSize="13sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/plan3"
                        android:layout_width="250dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="50dp"
                        android:backgroundTint="#ffffff"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:background="#FFFFFF"
                            app:srcCompat="@drawable/vege" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="119dp"
                            android:layout_height="54dp"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="10dp"
                            android:text="Your Healthy Meal"
                            android:textColor="#8158EA"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="60dp"
                            android:text="15 days- Daily"
                            android:textColor="#615F5F"
                            android:textSize="13sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>