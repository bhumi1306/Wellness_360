<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D4C5F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/detailshort"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextname"
        android:layout_width="266dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/shadow_button"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHint="#2A2929"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="266dp"
        android:layout_height="55dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/shadow_button"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHint="#2A2929"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextname" />

    <EditText
        android:id="@+id/textviewg"
        android:layout_width="266dp"
        android:layout_height="55dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/shadow_button"
        android:ems="10"
        android:hint="Gender"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="266dp"
        android:layout_height="55dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/shadow_button"
        android:ems="10"
        android:hint="Height(in ft)"
        android:inputType="numberDecimal"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHint="#2A2929"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewg" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="266dp"
        android:layout_height="55dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/shadow_button"
        android:ems="10"
        android:hint="Weight(in kg)"
        android:inputType="numberDecimal"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHint="#2A2929"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="266dp"
        android:layout_height="55dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/shadow_button"
        android:ems="10"
        android:hint="Country"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHint="#2A2929"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3" />

    <Button
        android:id="@+id/button8"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="#B095F4"
        android:text="Done"
        android:textAlignment="center"
        android:textColor="#353438"
        android:textSize="22sp"
        app:cornerRadius="10dp"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText4"
        app:strokeColor="#966EF8"
        app:strokeWidth="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>